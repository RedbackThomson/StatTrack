<Window x:Class="StatTrack.UI.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:StatTrack.UI.Models"
        WindowStartupLocation="CenterScreen" Title="ProgressWindow" Height="50" Width="190" AllowsTransparency="True" WindowStyle="None">
    <Grid>
        <Border BorderBrush="#FF08ACDC" BorderThickness="1" Padding="5">
            <TextBlock x:Name="SplashText" Text="{x:Static models:Constants.SplashText}" Foreground="#FF08ACDC" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Black"/>
        </Border>
    </Grid>
</Window>
